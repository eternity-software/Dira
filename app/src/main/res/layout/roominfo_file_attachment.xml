<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginBottom="6dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/dark_lighter"
    android:gravity="center_vertical">

    <com.diraapp.ui.components.dynamic.ThemeLinearLayout
        android:id="@+id/file_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:padding="8dp"
        android:background="@drawable/circle"
        app:themeBackgroundColor="message_voice_play_background">

        <com.diraapp.ui.components.dynamic.ThemeImageView
            android:id="@+id/file_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_file"
            android:visibility="visible"
            app:themeImageColor="message_voice_play"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:alpha="0.3"
            android:indeterminateTint="@color/black" />

    </com.diraapp.ui.components.dynamic.ThemeLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.diraapp.ui.components.dynamic.DynamicTextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratsemibold"
            android:padding="0dp"
            android:text="dreestoon, 01.09.2024 at 22:03"
            android:textSize="13sp"

            android:maxLines="1"

            app:themeColor="white" />

        <com.diraapp.ui.components.dynamic.DynamicTextView
            android:id="@+id/type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratsemibold"
            android:padding="0dp"
            android:text="my_video.mp4"
            android:textSize="11sp"

            android:maxLines="1"

            app:themeColor="medium_light_medium_light_gray" />

    </LinearLayout>

    <com.diraapp.ui.components.dynamic.ThemeImageView
        android:id="@+id/watch"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        android:layout_weight="0"
        android:src="@drawable/ic_eye"
        app:themeImageColor="white"/>

</LinearLayout>