<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_updates_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <com.diraapp.ui.components.dynamic.ThemeImageView
                android:id="@+id/room_updates_icon"
                app:tint="@color/dark"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:scaleType="fitXY"
                app:themeImageColor="client_data_icon_color"
                android:src="@drawable/ic_room_updates" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <com.diraapp.ui.components.dynamic.DynamicTextView
            android:id="@+id/room_updates_main_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:autoLink="all"

            android:fontFamily="@font/montserratsemibold"
            android:includeFontPadding="false"
            android:text="Room name changed"
            android:textColor="@color/dark"

            app:themeColor="client_data_title_color"

            android:textIsSelectable="true"
            android:textSize="14sp" />

        <com.diraapp.ui.components.dynamic.DynamicTextView
            android:id="@+id/room_updates_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="14dp"
            android:autoLink="all"

            android:fontFamily="@font/montserratsemibold"
            android:includeFontPadding="false"
            android:text="Anime boys"
            android:textColor="@color/gray"

            app:themeColor="client_data_text_color"

            android:textIsSelectable="true"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>