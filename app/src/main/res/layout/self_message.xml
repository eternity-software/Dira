<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:paddingTop="4dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:autoLink="all"
            android:background="@drawable/gray_rounded"
            android:backgroundTint="@color/gray_trans"

            android:fontFamily="@font/montserratsemibold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"

            android:text="05 december, 2004"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="11sp" />

        <LinearLayout

            android:paddingVertical="5dp"
            android:id="@+id/message_background"
            android:background="@drawable/unread_message_background_drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingLeft="60dp"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:background="@drawable/gray_rounded"
                android:backgroundTint="@color/gray_trans"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="bottom"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="00:00"
                android:textColor="@color/white"

                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/bubble_view_container"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/message_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/self_message"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/loading_attachment_layout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/attachment_progressbar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/views_container"
                    android:orientation="horizontal">

                </LinearLayout>


                <com.diraapp.ui.components.MessageTextView
                    android:id="@+id/message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:autoLink="all"

                    android:fontFamily="@font/montserratsemibold"
                    android:includeFontPadding="false"
                    android:text="ÑÐ°Ð¼ÑÐ¾Ð¹"
                    android:textColor="@color/light_gray"

                    android:textIsSelectable="true"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/emoji_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸˆ"
                android:textColor="@color/dark"
                android:textSize="42sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>