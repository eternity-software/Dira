<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:paddingVertical="6dp"
    android:paddingLeft="60dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:fontFamily="@font/montserratsemibold"
            android:gravity="bottom"
            android:paddingLeft="5dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="5dp"
            android:text="00:00"
            android:textColor="@color/light_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/self_message"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/loading_attachment_layout"
                android:layout_width="100dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_height="100dp">
                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"

                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:adjustViewBounds="true"/>

                <ru.dira.components.VideoPlayer
                    android:id="@+id/video_player"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:adjustViewBounds="true"/>
            </androidx.cardview.widget.CardView>


            <ru.dira.components.MessageTextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:layout_margin="10dp"

                android:textIsSelectable="true"
                android:fontFamily="@font/montserratsemibold"
                android:text="самса по 60р с рыбой и капустой"
                android:textColor="@color/light_gray"

                android:includeFontPadding="false"
                android:textSize="15sp"
                />

            <LinearLayout
                android:id="@+id/attachment_too_large"
                android:layout_width="wrap_content"

                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:layout_margin="10dp"

                    android:textIsSelectable="true"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="@string/attachment_large_title"
                    android:textColor="@color/white"

                    android:includeFontPadding="false"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/size_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:layout_marginHorizontal="10dp"

                    android:textIsSelectable="true"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="3000 mb"
                    android:textColor="@color/light_gray"
                    android:layout_marginBottom="8dp"
                    android:includeFontPadding="false"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/download_button"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:background="@drawable/accent_rounded"


                    android:fontFamily="@font/montserratsemibold"
                    android:text="@string/download"
                    android:textColor="@color/dark"


                    android:textSize="13sp"
                    />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/emoji_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🐈"
            android:textColor="@color/dark"
            android:textSize="42sp" />

    </LinearLayout>

</RelativeLayout>