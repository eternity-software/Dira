<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:autoLink="all"
            android:background="@drawable/gray_rounded"
            android:backgroundTint="@color/gray_trans"
            android:fontFamily="@font/montserratsemibold"
            android:gravity="center"

            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"

            android:text="05 december, 2004"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="40dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/picture_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profile_picture"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/nickname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"

                    android:fontFamily="@font/montserratbold"
                    android:paddingHorizontal="3dp"
                    android:paddingBottom="5dp"
                    android:text="Author"
                    android:textColor="@color/white"

                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/message_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/dialog_message"
                        android:orientation="vertical">

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/loading_attachment_layout"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/attachment_progressbar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/views_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <com.diraapp.ui.components.TightTextView
                            android:id="@+id/message_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:autoLink="all"
                            android:fontFamily="@font/montserratsemibold"
                            android:includeFontPadding="false"
                            android:text="самса по 60р с рыбой и капустой vk.com"
                            android:textColor="@color/dark"
                            android:textColorLink="@color/gray"

                            android:textIsSelectable="true"


                            android:textSize="15sp"
                            android:visibility="visible" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/emoji_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🐈"
                        android:textColor="@color/accent"
                        android:textSize="42sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/bubble_view_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/time_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"

                        android:layout_marginLeft="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/gray_rounded"
                        android:backgroundTint="@color/gray_trans"
                        android:fontFamily="@font/montserratsemibold"
                        android:gravity="bottom"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="00:00"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>