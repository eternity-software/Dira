<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:autoLink="all"
            android:background="@drawable/gray_rounded"
            android:backgroundTint="@color/gray_trans"
            android:fontFamily="@font/montserratsemibold"
            android:gravity="center"

            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"

            android:text="05 december, 2004"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="60dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/picture_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="100dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profile_picture"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/nickname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"

                    android:fontFamily="@font/montserratbold"
                    android:paddingHorizontal="3dp"
                    android:paddingBottom="5dp"
                    android:text="Author"
                    android:textColor="@color/white"

                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/message_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/dialog_message"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/loading_attachment_layout"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/attachment_progressbar"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/accent_dark"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/image_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true" />

                            <com.diraapp.ui.components.VideoPlayer
                                android:id="@+id/video_player"
                                android:layout_width="wrap_content"
                                android:layout_height="200dp" />
                        </androidx.cardview.widget.CardView>

                        <com.diraapp.ui.components.TightTextView
                            android:id="@+id/message_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:autoLink="all"
                            android:fontFamily="@font/montserratsemibold"
                            android:includeFontPadding="false"
                            android:text="самса по 60р с рыбой и капустой vk.com"
                            android:textColor="@color/dark"
                            android:textColorLink="@color/gray"

                            android:textIsSelectable="true"


                            android:textSize="15sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/attachment_too_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/attachment_too_large_text"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:autoLink="all"

                                android:fontFamily="@font/montserratsemibold"
                                android:includeFontPadding="false"
                                android:text="@string/attachment_large_title"
                                android:textColor="@color/dark"

                                android:textIsSelectable="true"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/size_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginBottom="8dp"

                                android:autoLink="all"
                                android:fontFamily="@font/montserratsemibold"
                                android:includeFontPadding="false"
                                android:text="3000 mb"

                                android:textColor="@color/gray"

                                android:textIsSelectable="true"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/download_button"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"

                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="10dp"
                                android:background="@drawable/gray_rounded"
                                android:backgroundTint="@color/dark"
                                android:fontFamily="@font/montserratsemibold"


                                android:gravity="center"
                                android:text="@string/download"
                                android:textColor="@color/white"


                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/room_updates_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginVertical="8dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="100dp"
                                    app:cardBackgroundColor="@android:color/transparent"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/room_updates_icon"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/accent"
                                        android:padding="6dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_room_updates"
                                        app:tint="@color/dark" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingVertical="8dp">

                                <TextView
                                    android:id="@+id/room_updates_main_text"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="14dp"
                                    android:autoLink="all"

                                    android:fontFamily="@font/montserratsemibold"
                                    android:includeFontPadding="false"
                                    android:text="Room name changed"
                                    android:textColor="@color/dark"

                                    android:textIsSelectable="true"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/room_updates_text"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginEnd="14dp"
                                    android:autoLink="all"

                                    android:fontFamily="@font/montserratsemibold"
                                    android:includeFontPadding="false"
                                    android:text="Anime fap boys"
                                    android:textColor="@color/gray"

                                    android:textIsSelectable="true"
                                    android:textSize="13sp" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>





                    <TextView
                        android:id="@+id/emoji_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🐈"
                        android:textColor="@color/accent"
                        android:textSize="42sp" />

                    <TextView
                        android:id="@+id/time_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"

                        android:layout_marginLeft="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/gray_rounded"
                        android:backgroundTint="@color/gray_trans"
                        android:fontFamily="@font/montserratsemibold"
                        android:gravity="bottom"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="6dp"
                        android:text="00:00"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>