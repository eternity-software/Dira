<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/tooltip_drawable"
    android:orientation="vertical"
   >

    <LinearLayout
        android:id="@+id/reply_row"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="16dp"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical">

        <com.diraapp.ui.components.dynamic.ThemeImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_round_reply"
            app:tint="@color/white"
            app:themeImageColor="white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserratsemibold"
            android:includeFontPadding="false"
            android:text="@string/message_tooltip_reply"
            android:textColor="@color/white"

            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/copy_row"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="16dp"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_copy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserratsemibold"
            android:includeFontPadding="false"
            android:text="@string/message_tooltip_copy"
            android:textColor="@color/white"

            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/save_row"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_download"
            app:tint="@color/white">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserratsemibold"
            android:includeFontPadding="false"
            android:text="@string/message_tooltip_download"
            android:textColor="@color/white"

            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/count_row"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?selectableItemBackground"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/icon_user_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/placeholder" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-12dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/icon_user_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/placeholder" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/count_row_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserratsemibold"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/message_tooltip_read_count"
            android:textColor="@color/white"

            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>